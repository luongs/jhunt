<h1>New Simulation</h1>

<%= form_for @simulation do |f| %>
  <div class="form-group row">
    <label for="name" class="col-sm-1 control-label">Name</label>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", id: "name", placeholder: "Simulation name" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="width" class="col-sm-1 control-label">Width</label>
    <div class="col-sm-1">
      <%= f.text_field :width, class: "form-control", id: "width", value: 8 %>
    </div>
  </div>

  <div class="form-group row">
    <label for="height" class="col-sm-1 control-label">Height</label>
    <div class="col-sm-1">
      <%= f.text_field :height, class: "form-control", id: "height", value: 8 %>
    </div>
  </div>

  <%= f.submit class: "btn btn-default" %>
<% end %>

<%= link_to 'Back', simulations_path %>
